@model Book.UI.Models.CategoryCRUDModel
@{
    ViewBag.Title = "Kategori Ekleme Sayfası";
}

<h2>Kategori Ekleyiniz</h2>

@using (Html.BeginForm("Insert", "Category", FormMethod.Post))
{
    <div class="form-group">

        <div class="form-group">
            @Html.TextBoxFor(s=>s.Name,new { @class="form-control",placeholder="Kategori Adı Giriniz",required=""})
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Kaydet" />
        </div>
    </div>
}