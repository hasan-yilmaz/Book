@model Book.UI.Models.MyBookCRUDModel

@{
    ViewBag.Title = "Kitap Ekle";
}

<h2>Kitap Ekleme Alanı</h2>

@using (Html.BeginForm("Insert","MyBook",FormMethod.Post,new { enctype = "multipart/form-data" }))
{
    <div class="form-group"> 
        
        <div class="form-group">
            @Html.TextBoxFor(s=>s.ImageFile,new { @class="form-control",type="File",placeholder="Dosya Ekle",required=""})
        </div>
        
        <div class="form-group">
            @Html.TextBoxFor(s=>s.Name,new { @class="form-control",placeholder="Kitap Adı",required=""})
        </div>

        <div class="form-group">
            @Html.TextBoxFor(s=>s.Writer,new { @class = "form-control", placeholder = "Kitap Yazarı", required = "" })
        </div>

        <div class="form-group">
            @Html.DropDownListFor(s=>s.CategoryId,Model.CategoryList, "Kategori Seç",new { @class = "form-control", required = "" })
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Kaydet" />
        </div>
    </div>
}